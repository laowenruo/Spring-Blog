<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mashiro.mapper.VisitRecordMapper">


    <resultMap id="visitRecord" type="cn.isbut.entity.VisitRecord">
        <id property="id" column="id"/>
        <result property="pv" column="pv"/>
        <result property="uv" column="uv"/>
        <result property="date" column="date"/>
    </resultMap>

    <!--添加访问记录-->
    <insert id="saveVisitRecord" parameterType="cn.isbut.entity.VisitRecord" useGeneratedKeys="true" keyProperty="id">
        insert into tb_visit_record (pv, uv, date) values (#{pv}, #{uv}, #{date})
    </insert>

    <!--按天数查询访问记录-->
    <select id="getVisitRecordListByLimit" resultType="cn.isbut.entity.VisitRecord">
        select pv, uv, date from tb_visit_record order by id desc limit #{limit}
    </select>



</mapper>
